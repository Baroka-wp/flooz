<div class="pos-f-t">
  <% if user_signed_in? %>
    <div class="collapse" id="navbarToggleExternalContent">
      <div class="bg-ligth p-4">
        <h4 class="text-dark">Hi <%= current_user.name %></h4>
      </div>
    </div>
  <% else %>
    <div class="collapse" id="navbarToggleExternalContent">
      <div class="bg-ligth p-4">
        <h4 class="text-dark">Flooz</h4>
        <span class="text-muted">Manage better your money !</span>
      </div>
    </div>
  <% end %>
  <nav class="navbar navbar-dark bg-blue">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <% if user_signed_in?%>
      <%= button_to "LOGOUT", destroy_user_session_path, method: :post, class:"btn-bold" %>
    <% end %>
  </nav>
</div>
<main class="splash">
    <div class="lead text-center">
      <h1 class="cover-heading">Flooz</h1>
      <em class="lead text-indigo"><small>Manage better your money !</small></em>
    </div>
      <% if user_signed_in?%>
        <%= link_to "My transactions", user_groups_path(current_user),  class:"btn btn-bold"%>
      <%else%>
        <div class="actions">
          <%= link_to "SIGN IN", new_user_session_path, class:"btn btn-bold"%>
          <%= link_to "SIGN UP", new_user_registration_path, class:"btn btn-muted" %>
        </div>
      <% end %>
</main>